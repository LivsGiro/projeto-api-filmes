{
    "openapi": "3.0.0",
    "info": {
        "title": "Movieflix API",
        "description": "API para gerenciamento de filmes",
        "version": "1.0.0"
    },
    "paths": {
        "/movies": {
            "get": {
                "summary": "Obter todos os filmes",
                "responses":{
                    "200": {  
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Movie"
                                    }
                                }
                            }
                        }
                    }
                }
}}},
    "components": {
        "schemas": {
            "Movie": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "title": {
                        "type": "string",
                        "description": "Nome do filme"
                    },
                    "genre_id": {
                        "type": "integer",
                        "description": "Genero do filme"
                    },
                    "genres": {
                        "type": "object","properties": {
                            "id":{
                                "type": "integer", "description": "Id do genero"
                            },
                            "name": {
                                "type": "string", "description": "Nome do genero"
                            }
                        }
                    },

                    "language_id": {
                        "type": "integer",
                        "description": "Id da linguagem"
                    },

                    "languages": {
                        "type": "object","properties": {
                            "id":{
                                "type": "integer", "description": "Id do genero"
                            },
                            "name": {
                                "type": "string", "description": "Nome do genero"
                            }
                    }},

                    "oscar_count": {
                        "type": "integer",
                        "description": "Quantidade de oscars recebidos"
                    }
                }
            }
        }
    }
}
                
